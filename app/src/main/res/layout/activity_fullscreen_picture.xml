<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chevbook.Activity.FullscreenPictureActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPagerFullscreenPictureActivity"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/buttonFullscreenPictureCloseImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/button_close_fullscreen"
        android:textColor="#ffffff"
        android:text="X" />

</RelativeLayout>
