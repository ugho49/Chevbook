<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/card_border"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="title"
                android:id="@+id/textViewDetailAnnonceTitre"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColor="@color/blue_account"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical|center_horizontal" />

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager_detail_appartement"
                android:layout_width="fill_parent"
                android:layout_height="230dp"
                android:layout_marginLeft="-7dp"
                android:layout_marginRight="-7dp"/>

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator_view_pager_detail_appartement"
                android:layout_width="248dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:padding="3dip"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-25dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textSize="25dp"
                android:textColor="@color/dark_black_grey"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/look_on_map"
                android:id="@+id/buttonDetailAppartementLookOnMap"
                android:background="@drawable/button_bg_card"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg_card"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/anounce_description"
                    android:id="@+id/textView5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="description"
                    android:id="@+id/textViewDetailAppartementDescription"
                    android:layout_marginTop="3dp" />
            </LinearLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_card"
                    android:gravity="center_horizontal|right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/anounce_price_month"
                        android:id="@+id/textView7"
                        android:layout_column="0"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="xxx €"
                        android:id="@+id/textViewDetailAppartementLoyer"
                        android:layout_column="1"
                        android:layout_gravity="right" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_card"
                    android:gravity="center_horizontal|right"
                    android:id="@+id/tableRow"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/anounce_district"
                        android:id="@+id/textView9"
                        android:layout_weight="1"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="quartier"
                        android:id="@+id/textViewDetailAppartementQuartier"
                        android:layout_gravity="right"
                        android:layout_column="1" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_card"
                    android:gravity="center_horizontal|right"
                    android:id="@+id/tableRow2"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/anounce_categorie"
                        android:id="@+id/textView11"
                        android:layout_weight="1"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="categorie"
                        android:id="@+id/textViewDetailAppartementCategorie"
                        android:layout_gravity="right"
                        android:layout_column="1" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_card"
                    android:gravity="center_horizontal|right"
                    android:id="@+id/tableRow4"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Surface"
                        android:id="@+id/textView15"
                        android:layout_weight="1"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="xx m²"
                        android:id="@+id/textViewDetailAppartementSurface"
                        android:layout_gravity="right"
                        android:layout_column="1" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_card"
                    android:gravity="center_horizontal|right"
                    android:id="@+id/tableRow3"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/anounce_room"
                        android:id="@+id/textView13"
                        android:layout_weight="1"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="x"
                        android:id="@+id/textViewDetailAppartementNbPiece"
                        android:layout_gravity="right"
                        android:layout_column="1" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/linearLayout"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/anounce_post_by"
                    android:id="@+id/textView3"
                    android:layout_marginRight="3dp"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="****"
                    android:textColor="@color/blue_account_light"
                    android:id="@+id/textViewDetailAppartementUser"
                    android:textStyle="italic"
                    android:textSize="13dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="DATE"
                android:id="@+id/textViewDetailAppartementDate"
                android:layout_marginTop="2dp"
                android:textSize="13dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>