<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/card_border"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:padding="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Appartement T2 meublé"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColor="@color/blue_account"
                android:layout_marginBottom="10dp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager_detail_appartement"
                android:layout_width="fill_parent"
                android:layout_height="200dp" />

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator_view_pager_detail_appartement"
                android:layout_width="248dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:padding="3dip"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-25dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/anounce_post_by"
                    android:id="@+id/textView3"
                    android:layout_marginRight="3dp"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ugho49"
                    android:textColor="@color/blue_account_light"
                    android:id="@+id/textView4"
                    android:textStyle="italic"
                    android:textSize="13dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Le 18/02/2014 à 14h12"
                android:id="@+id/textView"
                android:layout_marginTop="2dp"
                android:textSize="13dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textSize="25dp"
                android:textColor="@color/dark_black_grey"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/look_on_map"
                android:id="@+id/buttonDetailAppartementLookOnMap"
                android:background="@drawable/button_bg_card"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg_card"
                android:layout_marginTop="10dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/anounce_description"
                    android:id="@+id/textView5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Studio de 18m² au RDC sur cour, comprenant pièce principale, cuisine, salle d'eau avec wc et dressing. Proche toutes commodités. Libre de suite ! Environ 10min à pied du RER A. Garantie et caution demandées."
                    android:id="@+id/textView6"
                    android:layout_marginTop="3dp" />
            </LinearLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_card"
                    android:gravity="center_horizontal|right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/anounce_price_month"
                        android:id="@+id/textView7"
                        android:layout_column="0"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="250€"
                        android:id="@+id/textView8"
                        android:layout_column="1"
                        android:layout_gravity="right" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_card"
                    android:gravity="center_horizontal|right"
                    android:id="@+id/tableRow"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/anounce_district"
                        android:id="@+id/textView9"
                        android:layout_weight="1"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Lac de maine"
                        android:id="@+id/textView10"
                        android:layout_gravity="right"
                        android:layout_column="1" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_card"
                    android:gravity="center_horizontal|right"
                    android:id="@+id/tableRow2"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/anounce_categorie"
                        android:id="@+id/textView11"
                        android:layout_weight="1"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Locations"
                        android:id="@+id/textView12"
                        android:layout_gravity="right"
                        android:layout_column="1" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_card"
                    android:gravity="center_horizontal|right"
                    android:id="@+id/tableRow3"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/anounce_room"
                        android:id="@+id/textView13"
                        android:layout_weight="1"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="2"
                        android:id="@+id/textView14"
                        android:layout_gravity="right"
                        android:layout_column="1" />
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>