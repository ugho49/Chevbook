<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="A :"
                                android:id="@+id/textViewCustomDialogMessageFromTo"
                                android:layout_column="0"
                                android:textColor="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textViewCustomDialogMessageUserName"
                                android:layout_column="1"
                                android:layout_weight="1"
                                android:text="Ugho49"
                                android:textColor="#888888"
                                android:layout_marginLeft="24dp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Date :"
                                android:id="@+id/textView3"
                                android:layout_column="0"
                                android:textColor="#424242" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="15/06/2014"
                                android:textColor="#888888"
                                android:id="@+id/textViewCustomDialogMessageDate"
                                android:layout_column="1"
                                android:layout_weight="1"
                                android:layout_marginLeft="24dp" />
                        </TableRow>

                    </TableLayout>

                    <com.example.chevbook.CustomsView.CircularImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imageViewCustomDialogMessageUserReceiver"
                        android:src="@drawable/ic_user_drag_drop"
                        android:layout_marginRight="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Objet :"
                        android:id="@+id/textView5"
                        android:textColor="#424242"
                        android:layout_column="0" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextCustomDialogMessageTitle"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#646464"
                        android:hint="Titre du message"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Message :"
                    android:id="@+id/textView6"
                    android:textColor="#424242" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/editTextCustomDialogMessageMessage"
                    android:maxLength="500"
                    android:textColor="#646464"
                    android:hint="Votre message ici !"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="3dp"
                    android:minHeight="80dp" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_login_account"
                android:textColor="@android:color/white"
                android:text="@string/btn_send"
                android:id="@+id/buttonCustomDialogMessageSent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:minHeight="50dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_login_account"
                android:textColor="@android:color/white"
                android:text="@string/btn_reply"
                android:id="@+id/buttonCustomDialogMessageReply"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:minHeight="50dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>