    <PreferenceCategory android:title="@string/title_user">

        <Preference
            android:key="pref_user_name"
            android:title="@string/title_name_user"
            android:selectable="false"/>

        <Preference
            android:key="pref_user_email"
            android:title="@string/title_email_user"
            android:selectable="false"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/title_notification">

        <CheckBoxPreference
            android:key="pref_notification_on_or_off"
            android:checked="true"
            android:defaultValue="true"
            android:title="@string/title_notification_on_or_off">
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="pref_notification_vibrate"
            android:checked="true"
            android:defaultValue="true"
            android:title="@string/title_notification_vibrate">
        </CheckBoxPreference>

        <CheckBoxPreference
            android:key="pref_notification_ringtone_on_or_off"
            android:checked="true"
            android:defaultValue="true"
            android:title="Notification avec du son">
        </CheckBoxPreference>

        <RingtonePreference
            android:key="pref_notification_ringtone"
            android:ringtoneType="notification"
            android:title="@string/title_notification_ringtone"
            android:showDefault="true"
            android:showSilent="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/title_more_information">

        <Preference
            android:key="pref_more_clean_cache"
            android:title="Vider le cache"/>

        <Preference
            android:key="pref_more_version_app"
            android:title="Version"
            android:selectable="false"/>

    </PreferenceCategory>

</PreferenceScreen>